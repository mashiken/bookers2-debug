<div class="row">

	<% if @user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>

            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

	<div class="col-xs-3">
        <h2>User info</h2>
        <%= render partial:'profile', locals:{ user: @user } %>
        <!--同コントローラーのviewで表示ならusersは省略可 -->

        <h2>New book</h2>
        <%= render partial: 'books/newform', locals:{ book: @book } %>
    </div>
    <div class="col-xs-9">
        <h2>Books</h2>
        <!--books一覧 -->
        <table class="table table-hover table-inverse">
	        <thead>
		            <tr>
			        <th></th>
			        <th>Title</th>
			        <th>Opinion</th>
			        <th colspan="3"></th>
		        </tr>
	        </thead>

	        <tbody>
		        <% @books.each do |book| %>
		            <tr>
			            <td>
				            <%= link_to (book.user) do %>
				            <%= attachment_image_tag(book.user, :profile_image, size: "50x50", fallback: "no-image-mini.jpg") %>
				            <% end %>
			            </td>
			            <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
			            <td><%= book.body %></td>
		            </tr>
		        <% end %>
	        </tbody>
        </table>
    </div>
</div>
<!--books一覧 -->

