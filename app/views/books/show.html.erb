
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render partial: 'users/profile', locals: { user: current_user } %>

		<h2>New book</h2>
		<%= render partial: 'books/newform', locals:{ book: @newbook } %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td>
				<%= link_to (@book.user) do %>
				<%= attachment_image_tag(@book.user, :profile_image, size: "50x50", fallback: "no-image-mini.jpg") %><br>
				<%= @book.user.name %>
				<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>
				<% if @book.user == current_user %>
				<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
				<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				<% end %>
				<td>
					<% if @book.favorited_by?(current_user) %>
						<%= link_to book_favorites_path(@book), method: :delete do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: black;"></i>
						<%= @book.favorites.count %>
						<% end %>
					<% else %>
						<%= link_to book_favorites_path(@book), method: :post do %>
						<i class="fa fa-heart-o" aria-hidden="true"></i>
						<%= @book.favorites.count %>
						<% end %>
					<% end %>
				</td>
				<td>コメント数:<%= @book.book_comments.count %></td>
			</tr>
		</table>

		<% if @book_comment.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@book_comment.errors.count, "error") %> prohibited this book from being saved:</h2>

            <ul>
                <% @book_comment.errors.full_messages.each do |message| %>
                   <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <% @book_comments.each do | book_comment | %>
           <div class="book_comment_content">
                <%= link_to(@book.user) do %>
				    <%= attachment_image_tag(@book.user, :profile_image,size: "50x50", fallback: "no-image-mini.jpg") %>
			    <% end %>
			    <span class="vertical-align"><%= book_comment.comment %></span>
			    <% if current_user == book_comment.user %>
			        <%= link_to "Destroy", book_comment_path(book_comment), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id} vertical-align" %>
			    <% end %>
			</div>
        <% end %>

		<%= form_for  [@book, @book_comment] do |f| %>
	    <div class="field ">
	    	<%= f.label :test, class: "test" %>
		    <%= f.text_area :comment, rows:'5', class: "col-xs-11" %>
		    <div class="button col-xs-1">
	　　　　　    <%= f.submit "送信" , class: "btn btn-default btn-xs" %>
　　　　     </div>
	    </div>

	    <% end %>

	</div>
</div>

